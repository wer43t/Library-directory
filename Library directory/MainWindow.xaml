<Window x:Class="Library_directory.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library_directory"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Canvas HorizontalAlignment="Left" Height="399" Margin="10,10,0,0" VerticalAlignment="Top" Width="772">
            <ListBox x:Name="lbData" Height="75" Canvas.Left="520" Canvas.Top="10" Width="242" SelectionChanged="lbData_SelectionChanged"/>
            <DataGrid x:Name="dgvFigData" Height="269" Canvas.Left="520" Canvas.Top="85" Width="242"/>
            <Button x:Name="saveDataBtn" Content="Добавить в библиотеку" Canvas.Left="572" Canvas.Top="369" Width="137" Click="saveDataBtn_Click"/>
            <ListBox x:Name="lbDataList" Height="344" Canvas.Left="19" Canvas.Top="10" Width="473" MouseDoubleClick="lbDataList_MouseDoubleClick"/>
        </Canvas>

    </Grid>
</Window>
